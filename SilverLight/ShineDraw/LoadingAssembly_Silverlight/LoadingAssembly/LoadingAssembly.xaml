<UserControl x:Class="LoadingAssembly.LoadingAssembly"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="550" Height="400">
    <Grid x:Name="LayoutRoot" Background="White">
          <Grid x:Name="Cover" Background="White">
            <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Width="550" TextAlignment="Center" HorizontalAlignment="Center" x:Name="Label" Text="Click to download external assembly." Foreground="Blue" FontFamily="Verdana" FontWeight="Bold" FontSize="20"/>
        </Grid>
    </Grid>
</UserControl>
