<UserControl x:Class="CustomSplashScreen.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="550" Height="550">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="1.jpg" Stretch="Fill"/>
        <Image Source="2.jpg" Grid.Row="1" Stretch="Fill"/>
        
        <TextBlock Text="Appication Loaded!" Grid.RowSpan="2" FontSize="40" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
