<UserControl x:Class="SimpleGameSystem.SimpleGameSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="clr-namespace:Car"
    Width="550" Height="400">
    <Canvas x:Name="LayoutRoot" Background="White">
        <TextBlock Text="Use arrow keys to control the car." FontSize="12" FontFamily="Verdana" FontWeight="Bold" Canvas.Left="15" Canvas.Top="15"/>
        <controls:Car Canvas.Top="200" Canvas.Left="275" x:Name="Car"/>
    </Canvas>
</UserControl>
