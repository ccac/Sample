<UserControl x:Class="Car.Car"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="32" Height="32">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RenderTransform>
            <TransformGroup>
                <TranslateTransform X="-16" Y="-16"/>
                <ScaleTransform ScaleX="3" ScaleY="3"/>
            </TransformGroup>
            
        </Grid.RenderTransform>
        <Image x:Name="car1" Source="images/Image 33.png" Visibility="Visible"/>
        <Image x:Name="car2" Source="images/Image 37.png" Visibility="Collapsed"/>
        <Image x:Name="car3" Source="images/Image 41.png" Visibility="Collapsed"/>
        <Image x:Name="car4" Source="images/Image 49.png" Visibility="Collapsed"/>
        <Image x:Name="car5" Source="images/Image 55.png" Visibility="Collapsed"/>
        <Image x:Name="car6" Source="images/Image 63.png" Visibility="Collapsed"/>
        <Image x:Name="car7" Source="images/Image 69.png" Visibility="Collapsed"/>
        <Image x:Name="car8" Source="images/Image 73.png" Visibility="Collapsed"/>
    </Grid>
</UserControl>
