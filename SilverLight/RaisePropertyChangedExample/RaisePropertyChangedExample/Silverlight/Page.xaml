<UserControl x:Class="RaisePropertyChangedExample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <TextBox Text="{Binding Id}" Width="100" Height="25" Margin="5" />
            <TextBox Text="{Binding Name}"  Width="100" Height="25" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
