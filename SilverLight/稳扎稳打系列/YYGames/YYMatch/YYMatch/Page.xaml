<UserControl x:Class="YYMatch.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:views="clr-namespace:YYMatch.Views"
    xmlns:custom="clr-namespace:YYMatch.Controls"
    Width="640" Height="480">
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Background.jpg" />
        </Grid.Background>
        <views:GameView x:Name="game" />
        <views:ScoreboardView x:Name="scoreboard" />
        <custom:GameTip x:Name="tip" />
    </Grid>
</UserControl>
