<UserControl x:Class="SilverlightDemoMouse.Page"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas Background="#46461F">
        <Button Canvas.Left="50" Canvas.Top="50"
                Width="100" Height="50"
                Background="Red" FontSize="18"
                MouseLeftButtonDown="Button_MouseLeftButtonDown"
                MouseLeftButtonUp="Button_MouseLeftButtonUp"
                MouseMove="Button_MouseMove">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="abc.png" />
                    <TextBlock Text="拖我" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>
            </Button.Content>
        </Button>
    </Canvas>
</UserControl>
