<UserControl x:Class="SilverlightDemoTransForm.TranslateTransform"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="800" Height="300">
    <Canvas Background="#CDFCAE">
        <Image Source="LiveSearch.png" Canvas.Left="80" Canvas.Top="80" Opacity="0.5">
        </Image>
        <Image Source="LiveSearch.png" Canvas.Left="80" Canvas.Top="80">
            <Image.RenderTransform>
                <TranslateTransform X="-10" Y="-10"></TranslateTransform>
            </Image.RenderTransform>
        </Image>

        <TextBlock Canvas.Top="180" Canvas.Left="80" FontWeight="Bold" 
               Text="博客园" FontSize="60" Foreground="#C1C1C1">
            <TextBlock.RenderTransform>
                <TranslateTransform X="5" Y="5"></TranslateTransform>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Canvas.Top="180" Canvas.Left="80" FontWeight="Bold"
               Text="博客园" FontSize="60" Foreground="#FF0000"></TextBlock>
    </Canvas>
</UserControl>
