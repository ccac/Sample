<UserControl x:Class="SilverlightDemoTransForm.SkewTransform"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="800" Height="300">
    <Canvas Background="#CDFCAE">
        <Image Source="LiveSearch.png" Canvas.Left="80" Canvas.Top="20" Opacity="0.5">
        </Image>
        <Image Source="LiveSearch.png" Canvas.Left="80" Canvas.Top="20">
            <Image.RenderTransform>
                <SkewTransform AngleX="30" AngleY="30"></SkewTransform>
            </Image.RenderTransform>
        </Image>
    </Canvas>
</UserControl>
