    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="550" Height="400">
    <Canvas x:Name="LayoutRoot" Background="Black">
        <Canvas x:Name="Cover">
            <Canvas.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.8"/>
